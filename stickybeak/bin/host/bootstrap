#!/usr/bin/env bash

set -xeuo pipefail

SCRIPTDIR="$( cd "$(dirname "$0")" ; pwd -P )"

cd "$SCRIPTDIR"
cd ../..

pipenv --rm || echo "No virtualenv yet."
pipenv install -d
pre-commit install

(
    cd tests/test_srvs/django_srv
    pipenv --rm || echo "No virtualenv yet."
    pipenv install
)

(
    cd tests/test_srvs/flask_srv
    pipenv --rm || echo "No virtualenv yet."
    pipenv install
)
